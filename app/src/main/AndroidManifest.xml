<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carpooly">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.AccountControl"
            android:parentActivityName=".Controller.DisplayLoginMessage"></activity>
        <activity android:name=".Controller.OpenRegPageController"
            android:parentActivityName=".Controller.LoginUserActivity"></activity>
        <activity android:name=".Controller.DisplayLoginMessage"
            android:parentActivityName=".Controller.LoginUserActivity"/>
        <activity android:name=".Controller.LoginUserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Model.UserModel"></activity>
    </application>

</manifest>
